<h1>Listing shipments</h1>

<table>
  <tr>
    <th>Speciman</th>
    <th>Batch number</th>
    <th>Check number</th>
    <th>Manuf date</th>
    <th>Release date</th>
    <th>Expire date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shipments.each do |shipment| %>
  <tr>
    <td><%= shipment.speciman.title %></td>
    <td><%= shipment.batch_number %></td>
    <td><%= shipment.check_number %></td>
    <td><%= shipment.manufdt %></td>
    <td><%= shipment.releasedt %></td>
    <td><%= shipment.expiredt %></td>
    <td><%= link_to 'Show', [@speciman, shipment] %></td>
    <td><%= link_to 'Edit', edit_speciman_shipment_path(shipment.speciman, shipment) %></td>
    <td><%= link_to 'passport', passport_path(shipment.speciman, shipment), :target => '_blank' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to (t 'shipments.nav-new'), new_speciman_shipment_path(@speciman) %>
